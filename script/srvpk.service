[Unit]
Description=http endpoint for skywire public key
Wants=skywire.service

[Service]
Type=simple
ExecStart=/bin/nc -vlc -p 7998 -e 'printf "HTTP/1.0 200 OK\r\nContent-Length: "; skywire-cli visor pk | wc -m ; printf "\r\n"; skywire-cli visor pk'
Restart=always
StartLimitInterval=1min
StartLimitBurst=60

[Install]
WantedBy=multi-user.target
